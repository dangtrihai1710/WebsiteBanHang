@model WebsiteBanHang.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-eye me-2"></i>Chi tiết sản phẩm</h2>
    <div>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil me-2"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card card-admin">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Thông tin chi tiết</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Tên sản phẩm</label>
                        <p class="fs-5 fw-bold text-primary">@Model.Name</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Giá bán</label>
                        <p class="fs-4 fw-bold text-success">
                            @Model.Price.ToString("#,##0") VNĐ
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Danh mục</label>
                        <p>
                            <span class="badge bg-info fs-6">@Model.Category?.Name</span>
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">ID sản phẩm</label>
                        <p class="text-muted">#@Model.Id</p>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted">Mô tả sản phẩm</label>
                    <div class="bg-light p-3 rounded">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="mb-0">@Model.Description</p>
                        }
                        else
                        {
                            <p class="mb-0 text-muted fst-italic">Chưa có mô tả</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card card-admin mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-gear me-2"></i>Thao tác</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2 d-md-flex">
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa sản phẩm
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Xóa sản phẩm
                    </a>
                    <a asp-area="" asp-controller="Product" asp-action="Display" asp-route-id="@Model.Id" class="btn btn-info" target="_blank">
                        <i class="bi bi-eye me-2"></i>Xem trên website
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Product Image -->
        <div class="card card-admin">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-image me-2"></i>Hình ảnh sản phẩm</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 300px;">
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                        <div class="text-center">
                            <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-2">Chưa có hình ảnh</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Product Stats -->
        <div class="card card-admin mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-bar-chart me-2"></i>Thống kê</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Trạng thái:</span>
                    <span class="badge bg-success">Đang bán</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Lượt xem:</span>
                    <span class="fw-bold">0</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">Đã bán:</span>
                    <span class="fw-bold">0</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Tồn kho:</span>
                    <span class="fw-bold text-warning">Không giới hạn</span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card card-admin mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-lightning me-2"></i>Thao tác nhanh</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-star me-2"></i>Đánh dấu nổi bật
                    </button>
                    <button class="btn btn-outline-success btn-sm">
                        <i class="bi bi-percent me-2"></i>Tạo khuyến mãi
                    </button>
                    <button class="btn btn-outline-info btn-sm">
                        <i class="bi bi-share me-2"></i>Chia sẻ sản phẩm
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>