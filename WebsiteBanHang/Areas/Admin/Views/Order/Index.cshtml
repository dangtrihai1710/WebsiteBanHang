@model IEnumerable<WebsiteBanHang.Models.Order>
@using WebsiteBanHang.Models
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-cart-check me-2"></i>Quản lý đơn hàng</h2>
    <div>
        <button class="btn btn-info" onclick="loadOrderStats()">
            <i class="bi bi-graph-up me-2"></i>Thống kê
        </button>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4" id="statsCards" style="display: none;">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card card-admin bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Tổng đơn hàng</h6>
                        <h2 class="mb-0" id="totalOrders">0</h2>
                    </div>
                    <i class="bi bi-cart-check" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card card-admin bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Doanh thu</h6>
                        <h2 class="mb-0" id="totalRevenue">0 VNĐ</h2>
                    </div>
                    <i class="bi bi-currency-dollar" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card card-admin bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Đang xử lý</h6>
                        <h2 class="mb-0">@Model.Count(o => o.OrderStatus == "Đang xử lý")</h2>
                    </div>
                    <i class="bi bi-clock" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card card-admin bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Hoàn thành</h6>
                        <h2 class="mb-0">@Model.Count(o => o.OrderStatus == "Hoàn thành")</h2>
                    </div>
                    <i class="bi bi-check-circle" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card-admin">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><i class="bi bi-list me-2"></i>Danh sách đơn hàng</h5>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filterOrders('all')">Tất cả</button>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filterOrders('Đang xử lý')">Đang xử lý</button>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filterOrders('Đang giao')">Đang giao</button>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filterOrders('Hoàn thành')">Hoàn thành</button>
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="filterOrders('Đã hủy')">Đã hủy</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover" id="orderTable">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr data-status="@order.OrderStatus">
                                <td>
                                    <span class="badge bg-secondary">#@order.Id</span>
                                </td>
                                <td>
                                    <div>
                                        <strong>@order.CustomerName</strong>
                                        <br>
                                        <small class="text-muted">@order.CustomerPhone</small>
                                        <br>
                                        <small class="text-muted">@(order.ApplicationUser?.Email ?? "N/A")</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @order.OrderDate.ToString("dd/MM/yyyy")
                                        <br>
                                        <small class="text-muted">@order.OrderDate.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">@order.TotalPrice.ToString("#,##0") VNĐ</span>
                                    <br>
                                    <small class="text-muted">@order.TotalItems sản phẩm</small>
                                </td>
                                <td>
                                    <select class="form-select" id="orderStatus" data-order-id="@Model.Id">
                                        <option value="Đang xử lý" selected="@(Model.OrderStatus == "Đang xử lý")">Đang xử lý</option>
                                        <option value="Đã xác nhận" selected="@(Model.OrderStatus == "Đã xác nhận")">Đã xác nhận</option>
                                        <option value="Đang giao" selected="@(Model.OrderStatus == "Đang giao")">Đang giao</option>
                                        <option value="Hoàn thành" selected="@(Model.OrderStatus == "Hoàn thành")">Hoàn thành</option>
                                        <option value="Đã hủy" selected="@(Model.OrderStatus == "Đã hủy")">Đã hủy</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cart-x" style="font-size: 4rem; color: #ddd;"></i>
                <h4 class="mt-3">Chưa có đơn hàng nào</h4>
                <p class="text-muted">Các đơn hàng mới sẽ hiển thị tại đây</p>
            </div>
        }