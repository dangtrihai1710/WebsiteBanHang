<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Web Bán Hàng</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteBanHang.styles.css" asp-append-version="true" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Header chính với màu xanh lá -->
        <div class="bg-success text-white text-center py-3">
            <h1>Trang Web Bán Hàng</h1>
        </div>

        <!-- Thanh điều hướng với màu vàng -->
        <div class="bg-warning text-dark py-2">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">Trang Chủ</a> |
                        <a class="text-dark text-decoration-none" asp-controller="Product" asp-action="Index">Sản Phẩm</a> |
                        <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Privacy">Liên Hệ</a>
                    </div>
                    <div>
                        <a class="btn btn-outline-dark" href="@Url.Action("Index", "ShoppingCart")">
                            <i class="bi-cart-fill me-1"></i>
                            Giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container py-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mt-4">
        <div class="container">
            <div class="row py-4 bg-dark text-white">
                <div class="col-md-4 text-center">
                    <h5>Cột 1</h5>
                    <p>Nội dung cột 1.</p>
                </div>
                <div class="col-md-4 text-center">
                    <h5>Cột 2</h5>
                    <p>Nội dung cột 2.</p>
                </div>
                <div class="col-md-4 text-center">
                    <h5>Cột 3</h5>
                    <p>Nội dung cột 3.</p>
                </div>
            </div>
            <div class="text-center py-2">
                &copy; 2025 - Trang Web Bán Hàng - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>