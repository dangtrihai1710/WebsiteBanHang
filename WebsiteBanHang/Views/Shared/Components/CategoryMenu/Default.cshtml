@model IEnumerable<WebsiteBanHang.Models.Category>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="bi bi-tags me-1"></i>Danh mục
    </a>
    <ul class="dropdown-menu">
        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model)
            {
                <li>
                    <a class="dropdown-item" asp-controller="Product" asp-action="Category" asp-route-categoryId="@category.Id">
                        <i class="bi bi-tag me-2"></i>@category.Name
                    </a>
                </li>
            }
            <li><hr class="dropdown-divider"></li>
        }
        <li>
            <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                <i class="bi bi-list me-2"></i>Tất cả sản phẩm
            </a>
        </li>
    </ul>
</li>