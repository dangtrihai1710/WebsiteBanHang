@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section với Animation -->
<section class="hero-section position-relative overflow-hidden">
    <div class="hero-bg"></div>
    <div class="container position-relative">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title mb-4 animate-fade-in">
                        Khám phá thế giới 
                        <span class="text-gradient">công nghệ</span> 
                        cùng chúng tôi
                    </h1>
                    <p class="hero-subtitle mb-4 animate-fade-in-delay">
                        Những sản phẩm công nghệ hàng đầu với chất lượng tuyệt vời 
                        và giá cả cạnh tranh nhất thị trường.
                    </p>
                    <div class="hero-buttons animate-fade-in-delay-2">
                        <a href="#products" class="btn btn-primary btn-lg me-3 btn-modern">
                            <i class="bi bi-arrow-right me-2"></i>Khám phá ngay
                        </a>
                        <a href="#about" class="btn btn-outline-light btn-lg btn-modern">
                            <i class="bi bi-play-circle me-2"></i>Xem video
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image animate-float">
                    <img src="https://media-public.canva.com/BVD_w/MAESh-BVD_w/1/tl.png" alt="Hero Image" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
    
    <!-- Floating Elements -->
    <div class="floating-elements">
        <div class="floating-element floating-1"></div>
        <div class="floating-element floating-2"></div>
        <div class="floating-element floating-3"></div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-people text-primary"></i>
                    </div>
                    <div class="stat-number">10,000+</div>
                    <div class="stat-label">Khách hàng hài lòng</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-box-seam text-success"></i>
                    </div>
                    <div class="stat-number">5,000+</div>
                    <div class="stat-label">Sản phẩm chất lượng</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-truck text-warning"></i>
                    </div>
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Giao hàng nhanh chóng</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-award text-danger"></i>
                    </div>
                    <div class="stat-number">99%</div>
                    <div class="stat-label">Đánh giá tích cực</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Tại sao chọn chúng tôi?</h2>
            <p class="section-subtitle">Những ưu điểm vượt trội của ShopPro</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card modern-card h-100">
                    <div class="feature-icon gradient-primary">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4 class="feature-title">Chất lượng đảm bảo</h4>
                    <p class="feature-desc">
                        Tất cả sản phẩm đều được kiểm tra kỹ lưỡng và có chế độ bảo hành toàn diện.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-card modern-card h-100">
                    <div class="feature-icon gradient-success">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                    <h4 class="feature-title">Giao hàng siêu tốc</h4>
                    <p class="feature-desc">
                        Giao hàng trong vòng 2-4 giờ tại nội thành và 1-2 ngày toàn quốc.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-card modern-card h-100">
                    <div class="feature-icon gradient-warning">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h4 class="feature-title">Hỗ trợ 24/7</h4>
                    <p class="feature-desc">
                        Đội ngũ chăm sóc khách hàng chuyên nghiệp, sẵn sàng hỗ trợ mọi lúc.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="products-section py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Sản phẩm nổi bật</h2>
            <p class="section-subtitle">Khám phá những sản phẩm hot nhất hiện nay</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model.Take(8))
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="product-card modern-card h-100">
                            <!-- Product Badges -->
                            <div class="product-badges">
                                <span class="badge bg-danger">Hot</span>
                                <span class="badge bg-success">-20%</span>
                            </div>
                            
                            <!-- Product Image -->
                            <div class="product-image-container">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder.jpg" : item.ImageUrl)" 
                                     class="product-image" alt="@item.Name">
                                <div class="product-overlay">
                                    <div class="product-actions">
                                        <a href="@Url.Action("Display", "Product", new { id = item.Id })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button class="btn btn-success btn-sm btn-add-cart-quick" 
                                                data-product-id="@item.Id" 
                                                data-product-name="@item.Name"
                                                title="Thêm vào giỏ hàng">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                        <button class="btn btn-outline-primary btn-sm btn-wishlist" title="Yêu thích">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Product Info -->
                            <div class="product-info">
                                <div class="product-category">@(item.Category?.Name ?? "Chưa phân loại")</div>
                                <h5 class="product-title">
                                    <a href="@Url.Action("Display", "Product", new { id = item.Id })" class="text-decoration-none text-dark">
                                        @item.Name
                                    </a>
                                </h5>
                                <div class="product-rating mb-2">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star text-muted"></i>
                                    <span class="rating-text">(4.0)</span>
                                </div>
                                <div class="product-price">
                                    <span class="price-current">@item.Price.ToString("#,##0") VNĐ</span>
                                    <span class="price-old">@((item.Price * 1.2m).ToString("#,##0")) VNĐ</span>
                                </div>
                            </div>
                            
                            <!-- Product Footer -->
                            <div class="product-footer">
                                <button class="btn btn-primary btn-add-cart w-100" 
                                        data-product-id="@item.Id" 
                                        data-product-name="@item.Name">
                                    <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-5">
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary btn-lg">
                    Xem tất cả sản phẩm <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        }
        else
        {
            <div class="text-center">
                <img src="/images/empty-products.svg" alt="No products" class="img-fluid mb-4" style="max-width: 300px;">
                <h4>Chưa có sản phẩm nào</h4>
                <p class="text-muted">Hãy quay lại sau để khám phá những sản phẩm tuyệt vời!</p>
            </div>
        }
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section py-5 bg-primary text-white position-relative">
    <div class="newsletter-bg"></div>
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="newsletter-title mb-3">Đăng ký nhận thông tin mới nhất</h2>
                <p class="newsletter-subtitle mb-4">
                    Nhận thông báo về sản phẩm mới, khuyến mãi đặc biệt và những ưu đãi hấp dẫn
                </p>
                
                <div class="newsletter-form">
                    <div class="input-group input-group-lg">
                        <input type="email" class="form-control newsletter-input" 
                               placeholder="Nhập địa chỉ email của bạn...">
                        <button class="btn btn-light newsletter-btn" type="button">
                            <i class="bi bi-send me-2"></i>Đăng ký ngay
                        </button>
                    </div>
                </div>
                
                <div class="newsletter-features mt-4">
                    <div class="row g-3 justify-content-center">
                        <div class="col-auto">
                            <span class="feature-badge">
                                <i class="bi bi-check-circle me-1"></i>Miễn phí
                            </span>
                        </div>
                        <div class="col-auto">
                            <span class="feature-badge">
                                <i class="bi bi-shield-check me-1"></i>Bảo mật
                            </span>
                        </div>
                        <div class="col-auto">
                            <span class="feature-badge">
                                <i class="bi bi-x-circle me-1"></i>Không spam
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cập nhật số lượng giỏ hàng khi trang load
            updateCartCount();
        });

        // Add to cart functionality cho nút chính
        $('.btn-add-cart').click(function() {
            addToCartHandler($(this));
        });

        // Add to cart functionality cho nút quick (trên overlay)
        $('.btn-add-cart-quick').click(function() {
            addToCartHandler($(this));
        });

        // Hàm xử lý thêm vào giỏ hàng chung
        function addToCartHandler(button) {
            const productId = button.data('product-id');
            const productName = button.data('product-name');
            const originalHtml = button.html();
            
            // Disable button và hiển thị loading
            button.prop('disabled', true);
            if (button.hasClass('btn-add-cart')) {
                button.html('<span class="spinner-border spinner-border-sm me-2"></span>Đang thêm...');
            } else {
                button.html('<span class="spinner-border spinner-border-sm"></span>');
            }
            
            // AJAX call để thêm vào giỏ hàng
            $.ajax({
                url: '@Url.Action("AddToCart", "ShoppingCart")',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: 1
                },
                success: function(response) {
                    if (response.success) {
                        // Hiển thị thông báo thành công
                        if (button.hasClass('btn-add-cart')) {
                            button.html('<i class="bi bi-check me-2"></i>Đã thêm!');
                        } else {
                            button.html('<i class="bi bi-check"></i>');
                        }
                        button.removeClass('btn-primary btn-success').addClass('btn-success');
                        
                        // Cập nhật số lượng giỏ hàng
                        updateCartCount();
                        
                        // Hiển thị toast notification
                        showToast('Thành công!', `Đã thêm "${productName}" vào giỏ hàng`, 'success');
                        
                        // Reset button sau 2 giây
                        setTimeout(() => {
                            button.html(originalHtml);
                            button.removeClass('btn-success').addClass('btn-primary');
                            button.prop('disabled', false);
                        }, 2000);
                        
                        // Animation hiệu ứng bay đến giỏ hàng
                        animateToCart(button);
                        
                    } else {
                        // Hiển thị lỗi
                        showToast('Lỗi!', response.message, 'error');
                        resetButton();
                    }
                },
                error: function() {
                    showToast('Lỗi!', 'Không thể thêm sản phẩm vào giỏ hàng', 'error');
                    resetButton();
                }
            });
            
            function resetButton() {
                button.html(originalHtml);
                button.prop('disabled', false);
            }
        }

        // Wishlist functionality
        $('.btn-wishlist').click(function() {
            $(this).toggleClass('btn-outline-primary btn-danger');
            const icon = $(this).find('i');
            icon.toggleClass('bi-heart bi-heart-fill');
            
            const isAdded = $(this).hasClass('btn-danger');
            const message = isAdded ? 'Đã thêm vào danh sách yêu thích' : 'Đã xóa khỏi danh sách yêu thích';
            showToast('Thông báo', message, 'success');
        });

        // Cập nhật số lượng giỏ hàng
        function updateCartCount() {
            $.get('@Url.Action("GetCartCount", "ShoppingCart")', function(data) {
                const cartBadge = $('.cart-btn .badge');
                cartBadge.text(data.count);
                
                if (data.count > 0) {
                    cartBadge.removeClass('d-none');
                    // Animation bounce effect
                    cartBadge.addClass('animate__animated animate__pulse');
                    setTimeout(() => {
                        cartBadge.removeClass('animate__animated animate__pulse');
                    }, 1000);
                } else {
                    cartBadge.addClass('d-none');
                }
            }).fail(function() {
                $('.cart-btn .badge').text('0').addClass('d-none');
            });
        }

        // Animation hiệu ứng bay đến giỏ hàng
        function animateToCart(button) {
            const cart = $('.cart-btn');
            if (cart.length === 0) return;
            
            const buttonOffset = button.offset();
            const cartOffset = cart.offset();
            
            // Tạo element animation
            const flyingIcon = $('<i class="bi bi-cart-plus"></i>');
            flyingIcon.css({
                position: 'fixed',
                top: buttonOffset.top,
                left: buttonOffset.left,
                'z-index': 9999,
                'font-size': '24px',
                color: '#198754',
                'pointer-events': 'none',
                transition: 'all 0.8s cubic-bezier(0.2, 0, 0.2, 1)'
            });
            
            $('body').append(flyingIcon);
            
            // Animate đến giỏ hàng
            setTimeout(() => {
                flyingIcon.css({
                    top: cartOffset.top,
                    left: cartOffset.left,
                    transform: 'scale(0.5)',
                    opacity: 0
                });
            }, 50);
            
            // Xóa element sau animation
            setTimeout(() => {
                flyingIcon.remove();
                // Bounce effect cho cart
                cart.addClass('animate__animated animate__rubberBand');
                setTimeout(() => {
                    cart.removeClass('animate__animated animate__rubberBand');
                }, 1000);
            }, 850);
        }

        // Toast notification function
        function showToast(title, message, type) {
            const toastClass = type === 'success' ? 'bg-success' : 'bg-danger';
            const icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';
            
            const toastHtml = `
                <div class="toast ${toastClass} text-white" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
                    <div class="toast-header ${toastClass} text-white border-0">
                        <i class="bi ${icon} me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            
            // Tạo container nếu chưa có
            if (!$('#toast-container').length) {
                $('body').append('<div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>');
            }
            
            const $toast = $(toastHtml);
            $('#toast-container').append($toast);
            
            // Hiển thị toast
            const toast = new bootstrap.Toast($toast[0]);
            toast.show();
            
            // Tự động xóa toast sau khi ẩn
            $toast.on('hidden.bs.toast', function() {
                $(this).remove();
            });
        }

        // Smooth scroll cho các anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 100,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
}