@model IEnumerable<WebsiteBanHang.Models.Product>

<h2>Danh sách sản phẩm</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Thêm sản phẩm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Danh mục</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("#,##0") VNĐ</td>
                <td>@item.Description</td>
                <td>@item.Category?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 50px" />
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-info">Xem</a>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>