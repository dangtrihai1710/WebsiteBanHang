@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <h2 class="fw-bold">
                @if (!string.IsNullOrEmpty(ViewBag.CategoryName))
                {
                    <span>@ViewBag.CategoryName</span>
                }
                else
                {
                    <span>Tất cả sản phẩm</span>
                }
            </h2>
            <p class="text-muted">Khám phá những sản phẩm chất lượng tốt nhất</p>
        </div>
        <div class="col-lg-4">
            <!-- Tìm kiếm -->
            <form asp-action="Search" method="get" class="d-flex">
                <input class="form-control me-2" type="search" name="searchTerm" 
                       placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.SearchTerm">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-grid me-1"></i>Tất cả
                        </a>
                        <a asp-action="Category" asp-route-categoryId="1" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-laptop me-1"></i>Laptop
                        </a>
                        <a asp-action="Category" asp-route-categoryId="2" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-phone me-1"></i>Điện thoại
                        </a>
                        <!-- Thêm các danh mục khác nếu cần -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 product-card">
                        <!-- Product Image -->
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                            
                            <!-- Product Badges -->
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge bg-danger">Hot</span>
                            </div>
                        </div>

                        <!-- Product Info -->
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <small class="text-muted">@(item.Category?.Name ?? "Chưa phân loại")</small>
                            </div>
                            
                            <h5 class="card-title">@item.Name</h5>
                            
                            <p class="card-text text-muted flex-grow-1">
                                @{
                                    var shortDescription = item.Description?.Length > 100 ? 
                                        item.Description.Substring(0, 100) + "..." : item.Description;
                                }
                                @shortDescription
                            </p>
                            
                            <!-- Rating -->
                            <div class="mb-2">
                                <span class="text-warning">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star"></i>
                                </span>
                                <small class="text-muted">(4.0)</small>
                            </div>
                            
                            <!-- Price -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <span class="h5 text-primary fw-bold">@item.Price.ToString("#,##0") VNĐ</span>
                                    <small class="text-muted text-decoration-line-through ms-2">
                                        @((item.Price * 1.2m).ToString("#,##0")) VNĐ
                                    </small>
                                </div>
                            </div>
                            
                            <!-- Actions -->
                            <div class="d-grid gap-2">
                                <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-eye me-2"></i>Xem chi tiết
                                </a>
                                <button class="btn btn-outline-primary btn-add-cart" data-product-id="@item.Id">
                                    <i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Pagination (nếu cần) -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <nav aria-label="Product pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <span class="page-link">Trước</span>
                        </li>
                        <li class="page-item active">
                            <span class="page-link">1</span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <i class="bi bi-box-seam" style="font-size: 4rem; color: #ddd;"></i>
            <h4 class="mt-3">Không tìm thấy sản phẩm nào</h4>
            <p class="text-muted">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <span>Không có sản phẩm nào phù hợp với từ khóa "<strong>@ViewBag.SearchTerm</strong>"</span>
                }
                else
                {
                    <span>Hãy quay lại sau để khám phá những sản phẩm mới!</span>
                }
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Về trang chủ
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add to cart functionality
        $('.btn-add-cart').click(function() {
            const productId = $(this).data('product-id');
            const button = $(this);
            
            // Simulate add to cart
            button.html('<i class="bi bi-check me-2"></i>Đã thêm!');
            button.removeClass('btn-outline-primary').addClass('btn-success');
            
            setTimeout(() => {
                button.html('<i class="bi bi-cart-plus me-2"></i>Thêm vào giỏ');
                button.removeClass('btn-success').addClass('btn-outline-primary');
            }, 2000);
            
            // Here you would typically send an AJAX request to add the product to cart
            console.log('Added product to cart:', productId);
        });
    </script>
}