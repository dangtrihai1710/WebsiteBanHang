@model WebsiteBanHang.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
            }
            else
            {
                <div class="text-center p-5 bg-light">Không có hình ảnh</div>
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Giá:</strong> @Model.Price.ToString("#,##0") VNĐ</p>
                <p class="card-text"><strong>Danh mục:</strong> @Model.Category?.Name</p>
                <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
                <div class="mt-3">
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>