@model WebsiteBanHang.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xác nhận xóa</h2>

<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
</div>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Giá:</strong> @Model.Price.ToString("#,##0") VNĐ</p>
                <p class="card-text"><strong>Danh mục:</strong> @Model.Category?.Name</p>
                <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>