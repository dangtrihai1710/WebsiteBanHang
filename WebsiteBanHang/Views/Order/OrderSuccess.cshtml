@model WebsiteBanHang.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                </div>
                <h1 class="text-success mb-3">Đặt hàng thành công!</h1>
                <p class="lead text-muted">
                    Cảm ơn bạn đã đặt hàng. Chúng tôi sẽ xử lý đơn hàng và giao đến bạn sớm nhất có thể.
                </p>
            </div>

            <!-- Order Info -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Thông tin đơn hàng #@Model.Id
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Mã đơn hàng:</label>
                            <p class="fw-bold">#@Model.Id</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Ngày đặt hàng:</label>
                            <p class="fw-bold">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Tổng tiền:</label>
                            <p class="fw-bold text-success fs-5">@Model.TotalPrice.ToString("#,##0") VNĐ</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Trạng thái:</label>
                            <p><span class="badge bg-warning">@Model.OrderStatus</span></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Phương thức thanh toán:</label>
                            <p class="fw-bold">
                                @switch (Model.PaymentMethod)
                                {
                                    case "COD":
                                        <i class="bi bi-cash text-success me-1"></i>
                                        Thanh toán khi nhận hàng
                                                                break;
                                    case "Banking":
                                        <i class="bi bi-bank text-primary me-1"></i>
                                        Chuyển khoản ngân hàng
                                                                break;
                                    default:
                                        <i class="bi bi-wallet2 text-danger me-1"></i>
                                        @Model.PaymentMethod
                                        break;
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Người nhận:</label>
                            <p class="fw-bold">@Model.CustomerName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted">Số điện thoại:</label>
                            <p class="fw-bold">@Model.CustomerPhone</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Địa chỉ giao hàng:</label>
                        <p class="fw-bold">@Model.ShippingAddress</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="text-muted">Ghi chú:</label>
                            <p class="fw-bold">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-bag-check me-2"></i>
                        Chi tiết đơn hàng (@Model.OrderDetails.Count sản phẩm)
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderDetails)
                    {
                        <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                         class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center"
                                         style="width: 60px; height: 60px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                                <div>
                                    <h6 class="mb-1">@item.Product?.Name</h6>
                                    <small class="text-muted">@item.Product?.Category?.Name</small>
                                    <br>
                                    <small class="text-muted">
                                        @item.Price.ToString("#,##0") VNĐ × @item.Quantity
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <strong class="text-success">@item.Total.ToString("#,##0") VNĐ</strong>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock me-2"></i>
                        Bước tiếp theo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 40px; height: 40px;">
                                <i class="bi bi-check text-white"></i>
                            </div>
                            <div>
                                <strong>Đặt hàng thành công</strong>
                                <br>
                                <small class="text-muted">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 40px; height: 40px;">
                                <i class="bi bi-clock text-white"></i>
                            </div>
                            <div>
                                <strong>Xác nhận đơn hàng</strong>
                                <br>
                                <small class="text-muted">Trong vòng 1-2 giờ</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 40px; height: 40px;">
                                <i class="bi bi-truck text-white"></i>
                            </div>
                            <div>
                                <strong>Chuẩn bị hàng và giao hàng</strong>
                                <br>
                                <small class="text-muted">1-3 ngày làm việc</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 40px; height: 40px;">
                                <i class="bi bi-house text-white"></i>
                            </div>
                            <div>
                                <strong>Nhận hàng tại địa chỉ</strong>
                                <br>
                                <small class="text-muted">Theo thời gian hẹn</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body text-center">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id"
                           class="btn btn-primary me-md-2">
                            <i class="bi bi-eye me-2"></i>Xem chi tiết đơn hàng
                        </a>
                        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="bi bi-list me-2"></i>Đơn hàng của tôi
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-success">
                            <i class="bi bi-house me-2"></i>Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="alert alert-info mt-4" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-info-circle me-2"></i>
                    Thông tin liên hệ
                </h6>
                <p class="mb-1">
                    Nếu bạn có bất kỳ câu hỏi nào về đơn hàng, vui lòng liên hệ với chúng tôi:
                </p>
                <ul class="mb-0">
                    <li>Hotline: <strong>1900 9999</strong></li>
                    <li>Email: <strong>support@shoppro.com</strong></li>
                    <li>Chat trực tuyến trên website</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto print invoice option
            if (confirm('Bạn có muốn in hóa đơn đơn hàng không?')) {
                // window.print();
                console.log('Print invoice for order #@Model.Id');
            }

            // Send confirmation email
            setTimeout(function() {
                // Simulate sending confirmation email
                console.log('Sending confirmation email for order #@Model.Id');
            }, 2000);

            // Show success animation
            $('.bi-check-circle-fill').addClass('animate__animated animate__bounceIn');
        });
    </script>
}