@model WebsiteBanHang.Controllers.ShoppingCartController.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-credit-card me-2"></i>Thanh toán</h2>

    <form asp-action="PlaceOrder" method="post">
        <div class="row">
            <div class="col-lg-8">
                <!-- Thông tin giao hàng -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Thông tin giao hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Order.ShippingAddress" class="form-label">
                                Địa chỉ giao hàng <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Order.ShippingAddress" class="form-control" rows="3"
                                      placeholder="Nhập địa chỉ chi tiết..." required></textarea>
                            <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Order.Notes" class="form-label">Ghi chú đơn hàng</label>
                            <textarea asp-for="Order.Notes" class="form-control" rows="2"
                                      placeholder="Ghi chú đặc biệt cho đơn hàng (tùy chọn)..."></textarea>
                            <span asp-validation-for="Order.Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-4">
                <!-- Thông tin đơn hàng -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bag-check me-2"></i>Đơn hàng của bạn</h5>
                    </div>
                    <div class="card-body">
                        <!-- Danh sách sản phẩm -->
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="mb-0">@item.Name</h6>
                                        <small class="text-muted">Số lượng: @item.Quantity</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <strong>@item.Total.ToString("#,##0") VNĐ</strong>
                                </div>
                            </div>
                        }

                        <!-- Tổng cộng -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span>@Model.Cart.GetTotalPrice().ToString("#,##0") VNĐ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Phí vận chuyển:</span>
                                <span class="text-success">Miễn phí</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Giảm giá:</span>
                                <span class="text-danger">0 VNĐ</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Tổng cộng:</strong>
                                <strong class="text-danger fs-5">@Model.Cart.GetTotalPrice().ToString("#,##0") VNĐ</strong>
                            </div>
                        </div>

                        <!-- Nút đặt hàng -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Đặt hàng ngay
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Quay lại giỏ hàng
                            </a>
                        </div>

                        <!-- Chính sách -->
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-shield-check me-1 text-success"></i>
                                Bằng việc đặt hàng, bạn đồng ý với
                                <a href="#" class="text-decoration-none">Điều khoản sử dụng</a>
                                và <a href="#" class="text-decoration-none">Chính sách bảo mật</a> của chúng tôi.
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Thông tin hỗ trợ -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-headset me-2"></i>Cần hỗ trợ?</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-telephone me-2 text-primary"></i>
                            <span>Hotline: <strong>1900 9999</strong></span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-chat-dots me-2 text-success"></i>
                            <span>Chat trực tuyến</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-envelope me-2 text-info"></i>
                            <span>support@shoppro.com</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Format phone number input
            $('#Order_CustomerPhone').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 10) {
                    value = value.substring(0, 10);
                }
                $(this).val(value);
            });

            // Form validation
            $('form').on('submit', function(e) {
                const name = $('#Order_CustomerName').val().trim();
                const phone = $('#Order_CustomerPhone').val().trim();
                const address = $('#Order_ShippingAddress').val().trim();

                if (!name || !phone || !address) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                    return false;
                }

                if (phone.length < 10) {
                    e.preventDefault();
                    alert('Số điện thoại phải có ít nhất 10 số!');
                    return false;
                }

                // Show loading
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...');
            });

            // Auto-fill user info if available
            @if (User.Identity.IsAuthenticated)
            {
                    <text>
                    // Set default values from user profile if available
                    if (!$('#Order_CustomerName').val()) {
                        $('#Order_CustomerName').val('@(ViewBag.UserFullName ?? "")');
                    }
                    </text>
            }
        });
    </script>
}