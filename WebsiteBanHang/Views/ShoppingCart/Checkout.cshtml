                                <label asp-for="Order.CustomerPhone" class="form-label">
                                    Số điện thoại <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Order.CustomerPhone" class="form-control" placeholder="Nhập số điện thoại" required>
                                <span asp-validation-for="Order.CustomerPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Order.ShippingAddress" class="form-label">
                                Địa chỉ giao hàng <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Order.ShippingAddress" class="form-control" rows="3" 
                                      placeholder="Nhập địa chỉ chi tiết..." required></textarea>
                            <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Order.Notes" class="form-label">Ghi chú đơn hàng</label>
                            <textarea asp-for="Order.Notes" class="form-control" rows="2" 
                                      placeholder="Ghi chú đặc biệt cho đơn hàng (tùy chọn)..."></textarea>
                            <span asp-validation-for="Order.Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Phương thức thanh toán -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Phương thức thanh toán</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="Order.PaymentMethod" value="COD" checked>
                            <label class="form-check-label">
                                <i class="bi bi-cash me-2 text-success"></i>
                                <strong>Thanh toán khi nhận hàng (COD)</strong>
                                <br>
                                <small class="text-muted">Thanh toán bằng tiền mặt khi nhận hàng</small>
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="Order.PaymentMethod" value="Banking">
                            <label class="form-check-label">
                                <i class="bi bi-bank me-2 text-primary"></i>
                                <strong>Chuyển khoản ngân hàng</strong>
                                <br>
                                <small class="text-muted">Chuyển khoản qua số tài khoản ngân hàng</small>
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Order.PaymentMethod" value="MoMo">
                            <label class="form-check-label">
                                <i class="bi bi-wallet2 me-2 text-danger"></i>
                                <strong>Ví điện tử MoMo</strong>
                                <br>
                                <small class="text-muted">Thanh toán qua ví điện tử MoMo</small>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Thông tin đơn hàng -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bag-check me-2"></i>Đơn hàng của bạn</h5>
                    </div>
                    <div class="card-body">
                        <!-- Danh sách sản phẩm -->
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="mb-0">@item.Name</h6>
                                        <small class="text-muted">Số lượng: @item.Quantity</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <strong>@item.Total.ToString("#,##0") VNĐ</strong>
                                </div>
                            </div>
                        }

                        <!-- Tổng cộng -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span>@Model.Cart.GetTotalPrice().ToString("#,##0") VNĐ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Phí vận chuyển:</span>
                                <span class="text-success">Miễn phí</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Giảm giá:</span>
                                <span class="text-danger">0 VNĐ</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Tổng cộng:</strong>
