    <script>
        $(document).ready(function() {
            // Auto print invoice option
            if (confirm('Bạn có muốn in hóa đơn đơn hàng không?')) {
                // window.print();
                console.log('Print invoice for order #@Model.Id');
            }

            // Send confirmation email
            setTimeout(function() {
                // Simulate sending confirmation email
                console.log('Sending confirmation email for order #@Model.Id');
            }, 2000);
        });
    </script>
